<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <TextView
        android:id="@+id/ring04w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ring04w 2015-07-09"/>

    <ProgressBar
        android:id="@+id/first_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:progressBarStyleHorizontal"
        android:layout_below="@id/ring04w"
        android:max="200"
        android:progress="20"/>
    <Button
        android:id="@+id/progressbar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_progressbar"
        android:layout_centerHorizontal="true"
        android:text="progress"/>

    <SeekBar
        android:id="@+id/first_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:max="200"
        android:progress="30"
        />
    <Button
        android:id="@+id/seekbar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_seekbar"
        android:layout_centerHorizontal="true"
        android:text="pull"/>

    <RatingBar
        android:id="@+id/first_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekbar_button"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:stepSize="1" />
    <Button
        android:id="@+id/ratingbar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_ratingbar"
        android:layout_centerHorizontal="true"
        android:text="addstars"/>




</RelativeLayout>
